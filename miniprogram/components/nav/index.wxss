.nav-container {
    height: 44px;
    width: 100%;
    background-color: #fff;
    z-index: 999;
    display: flex;
    flex-direction: row;
    position: fixed;
    top: 0;
    left: 0;
}

.nav-button {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* .nav-button > image {
    width: 46rpx;
    height: 46rpx;
} */

.nav-button-image {
    width: 46rpx;
    height: 46rpx;
}

.nav-button-share {
    padding: 0px;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: rgba(255, 255, 255, 0); */
	background: transparent;
}

.nav-button-share::after {
    border: none;
}

.nav-image-share {
    width: 46rpx;
    height: 46rpx;
}

.nav-title {
    flex: 1;
    padding-right: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 44px;
}

